# Configuración de Base de Datos
DATABASE_URL=postgresql://user:password@db:5432/sga_db

# Configuración de Logging
LOG_LEVEL=INFO
LOG_FORMAT=json

# Configuración de APIs
API_TIMEOUT=30
API_RETRIES=3

# Configuración de Seguridad
SECRET_KEY=your-secret-key-here-please-change-in-production
ALGORITHM=HS256
ACCESS_TOKEN_EXPIRE_MINUTES=30

# URLs de Servicios (para desarrollo local)
AI_SERVICE_URL=http://ai-engine-api:8001/api/v1
CORE_SGA_URL=http://core-sga-api:8000/api/v1
RISK_ENGINE_URL=http://risk-engine-api:8002/api/v1
OBJECTIVES_ENGINE_URL=http://objectives-engine-api:8004/api/v1
GHG_ENGINE_URL=http://ghg-engine-api:8005/api/v1

# Configuración específica del Core SGA
MAX_ASPECTS_PER_PAGE=100
ENABLE_AI_CLASSIFICATION=true

# Configuración del Motor de IA
MODEL_NAME=facebook/bart-large-mnli
MAX_SEQUENCE_LENGTH=512

# Configuración del Motor de GEI
DEFAULT_ELECTRICITY_FACTOR=0.82
DEFAULT_GASOLINE_FACTOR=2.31
DEFAULT_DIESEL_FACTOR=2.68

# Configuración de PostgreSQL (para docker-compose)
POSTGRES_USER=user
POSTGRES_PASSWORD=password
POSTGRES_DB=sga_db